@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>Glove Machine IoT</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- HTML5 shim 和 Respond.js 是为了让 IE8 支持 HTML5 元素和媒体查询（media queries）功能 -->
    <!-- 警告：通过 file:// 协议（就是直接将 html 页面拖拽到浏览器中）访问页面时 Respond.js 不起作用 -->
    <!--[if lt IE 9]>
      <script src="https://cdn.jsdelivr.net/npm/html5shiv@3.7.3/dist/html5shiv.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/respond.js@1.4.2/dest/respond.min.js"></script>
    <![endif]-->
    <link href="~/Content/DH/lib/layui/css/layui.css" rel="stylesheet" />
    @*<link href="~/Content/DH/css/layer.css" rel="stylesheet" />*@
    <style>
        body {
            font-family: Microsoft Yahei; /*此处应该有很多备用字体以防万一*/
            min-width: 480px;
            height: 100%;
        }
        .layer {
            padding-top:20px;
        }
        .layui-form-label {
            width: 100px; /*左边的字*/
        }
        .layui-input, .layui-textarea {
            width: 97%; /*右边的框*/
        }
        p{
            padding-left: 15px;

        }
    </style>
</head>
<body>
    <div class="layui-container">
        <div class="layui-row">
            <div class="layui-col-md6">
                <div class="layer">
                    <div class="layui-form" lay-filter="userAdd">
                        <div class="layui-form-item">
                            <label class="layui-form-label">设备ID：</label>
                            <div class="layui-input-block">
                                <input type="text" name="UName" required lay-verify="required" placeholder="设备ID" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label">运行状态：</label>
                            <div class="layui-input-block">
                                <input type="text" name="UCode" required lay-verify="required" placeholder="运行状态" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label">运行时间：</label>
                            <div class="layui-input-block">
                                <input type="text" name="Pwd" required lay-verify="required" placeholder="运行时间" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="layui-col-md6">
                <div class="layer">
                    <div class="layui-form" lay-filter="userAdd">
                        <div class="layui-form-item">
                            <label class="layui-form-label">停机时间：</label>
                            <div class="layui-input-block">
                                <input type="text" name="Pwd" required lay-verify="required" placeholder="停机时间" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label">目标产量：</label>
                            <div class="layui-input-block">
                                <input type="text" name="Pwd" required lay-verify="required" placeholder="目标产量" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label">运行时间：</label>
                            <div class="layui-input-block">
                                <input type="text" name="Pwd" required lay-verify="required" placeholder="运行时间" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="layui-col-md3">
                <p style="color:#009688; font-size: 36px; text-align: center;  padding-top:10px">60%</p>
                <p style="text-align: center;font-size:16px;padding-top:10px;">单个进度</p>
            </div>
            <div class="layui-col-md6">
                <div class="layui-form-item">
                    <div class="layui-form-item layui-form-text">
                        <div class="layui-input-block">
                            <textarea name="Remark" placeholder="历史记录" class="layui-textarea"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="layui-col-md3">
                <p style="color:#FFB800; font-size: 36px; text-align: center;  padding-top:10px">80%</p>
                <p style="text-align: center;font-size:16px;padding-top:10px;">整体进度</p>
            </div>
        </div>
        </div>

            <script src="https://cdn.jsdelivr.net/npm/jquery@1.12.4/dist/jquery.min.js"></script>
            <!-- 加载 Bootstrap 的所有 JavaScript 插件。你也可以根据需要只加载单个插件。 -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js"></script>
            <script src="~/Content/DH/lib/layui/layui.all.min.js"></script>
            <script type="text/html" id="barDemo">
                <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
                <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
            </script>
            <script src="~/Content/DH/js/3.js"></script>
            <script>
                getRolename();
            </script>
</body>
</html>
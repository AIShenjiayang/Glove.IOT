    <script>
        var category = window.location.search;
        var cateval = category.substring(category.lastIndexOf('=') + 1, category.length);
        if (cateval !== "") {
            var xhr = new XMLHttpRequest();
            xhr.open('GET', "/Device/GetDeviceParameterInfo?DeviceId=" + cateval);
            //xhr.setRequestHeader('content-Type', 'application/x-www-form-urlencoded');
            xhr.send();//多发一个id数据
            xhr.onreadystatechange = function () {
                if (this.readyState !== 4) return; 
                var deviceInfos = eval("(" + this.responseText + ")");//JSON.parse安全
                $('input[name="设备ID"]').val(deviceInfos[0].DeviceId);
                if (deviceInfos[0].StatusFlag === "0")
                    $('input[name="运行状态"]').val("关机中");
                else if (deviceInfos[0].StatusFlag === "1")
                    $('input[name="运行状态"]').val("运行中");
                else if (deviceInfos[0].StatusFlag === "2")
                    $('input[name="运行状态"]').val("暂停中");
                else if (deviceInfos[0].StatusFlag === "3")
                    $('input[name="运行状态"]').val("故障中");
                else if (deviceInfos[0].StatusFlag === "未连接")
                    $('input[name="运行状态"]').val("未连接");
                //解析时间
                console.log(deviceInfos[0].StartTime);
                var StartTime = (eval(deviceInfos[0].StartTime.replace(/\/Date\((\d+)\)\//gi, "new Date($1)"))).pattern("yyyy-M-d HH:mm:ss");
                var StopTime = (eval(deviceInfos[0].StartTime.replace(/\/Date\((\d+)\)\//gi, "new Date($1)"))).pattern("yyyy-M-d HH:mm:ss");
                $('input[name="运行时间"]').val(StartTime);
                $('input[name="停机时间"').val(StopTime);
                $('input[name="目标产量"').val(deviceInfos[0].TargetOutput);
                //$('textarea[name="历史记录"]').val(deviceInfos[0].DeviceId);
                $('p[name="单个进度"').text(deviceInfos[0].SingleProgress + '%');
                $('p[name="整体进度"').text(Math.floor((deviceInfos[0].NowOutput / deviceInfos[0].TargetOutput) * 100) + '%');
            };
        }

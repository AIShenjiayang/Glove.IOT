    <script>
        //获取数据
        uploadDevicedetail('get');

        $("#upload").click(function () {
            $('#chooseImage').click();
        })
        $('#chooseImage').on('change', function (data) {
            //var reader = new FileReader();
            //reader.onload = function (e) {
            //    console.log(reader.result);  //或者 e.target.result都是一样的，都是base64码
            //    $('#Hportrait').attr('src', reader.result);
            //    userDetail.delete('Picture');//清空
            //    userDetail.append('Picture', reader.result);
            //}
            //reader.readAsDataURL(this.files[0]);
            var filePath = $(this).val(),         //获取到input的value，里面是文件的路径
                fileFormat = filePath.substring(filePath.lastIndexOf(".")).toLowerCase(),//获取文件后缀名
                src = window.URL.createObjectURL(this.files[0]); //转成可以在本地预览的格式
            //src = window.URL.createObjectURL(data.target.files[0]); //同理都可以获取文件
            if (!fileFormat.match(/.png|.jpg|.jpeg/)) {
                //error_prompt_alert('上传错误,文件格式必须为：png/jpg/jpeg');
                layui.use('layer', function () {
                    var layer = layui.layer;
                    layer.msg('<span style="font-size:24px;vertical-align:middle;line-height:76px;">文件格式错误</span>', {
                        time: 2000,
                        area: ['200px', '100px'],
                        shade: 0.4,
                        shadeClose: true
                    });
                });
                return;
            }

            $('#Hportrait').attr('src', src);
            userDetail.delete('Picture');//清空
            userDetail.append('Picture', data.target.files[0]);
            //userDetail = data.target.files[0];
            console.log(this.files[0]);
            console.log(data.target.files[0]);
        });

    </script>


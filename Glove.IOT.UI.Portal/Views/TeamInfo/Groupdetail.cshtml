                layer.load(2);
                setTimeout(function () {
                    layer.closeAll("loading");
                    $("ul#group-tree").append("<li>" +
                        "<a ><cite>" + text + "</cite> </a>" +
                        "<i class='layui-icon layui-icon-add-1 hide tree-select'></i>" +
                        "<i class='layui-icon layui-icon-delete hide tree-select'></i>" +
                        "<i class='layui-icon layui-icon-edit hide tree-select'></i>" +
                        "</li>");
                }, 1000)
            });
        })
        //打开/关闭菜单
        $("ul#group-tree").on({
            click: function (event) {
                event.stopPropagation();
                event.preventDefault();
                if ($(this).parent().children("ul").hasClass("layui-show")) {
                    $(this).html("");
                    $(this).parent().children("ul").removeClass("layui-show");
                    return;
                } else {
                    $(this).html("");
                    $(this).parent().children("ul").addClass("layui-show");
                    return;
                }
                return;
            }
        }, 'i.layui-tree-spread');

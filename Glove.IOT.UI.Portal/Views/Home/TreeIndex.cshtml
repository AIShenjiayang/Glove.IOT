<html>
  <head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <link href="~/Content/theme/bootstrap.css" rel="stylesheet" />
    <script>    
      $(function () {
          $("#btn_login").click(function () {
                $.ajax({
                   type: "get",
                   url: "http://localhost:63305/api/UserLogin/Login",
                   data: { strUserName: $("#txt_username").val(), strPwd: $("#txt_password").val() },
                   success: function (data, status) {
                   if (status == "success") {
                       if (!data.BRes) {
                         alert("登录失败");
                         return;
                       }
                      alert("登录成功");
                     //登录成功之后将用户名和用户票据带到主界面
                      window.location = "/Home/Index?UserName=" + data.UserName + "&Ticket=" + data.Ticket;
                   }
                   },
                    error: function (e) {
                    },
                    complete: function () {

                    }

                });
          });
      });
    </script>
  </head>

    <body>
        <div style="text-align:center;">
            <div>用户名：<input type="text" id="txt_username" /></div>
            <div>密  码：<input type="password" id="txt_password" /></div>
            <div><input type="button" value="登录" id="btn_login" class="btn-default" /></div>
        </div>
    </body>


</html>
@model Glove.IOT.Model.ActionInfo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript">
        function afterEdit(data) {
            if (data == "ok") {
                window.parent.window.afterEditSuccess();
            }
            else {
                alert("败了");
            }
        }
        function submitForm() {
            $("form").submit();
        }
    </script>
</head>
<body>
    @using (Ajax.BeginForm(new AjaxOptions() { OnSuccess = "afterEdit" }))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>修改权限</h4>
            @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.SubTime)
            @Html.HiddenFor(model => model.ModfiedOn)
            @Html.HiddenFor(model => model.StatusFlag)

            <div class="form-group">
                @Html.LabelFor(model => model.Remark, "备注")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Remark )
                    @Html.ValidationMessageFor(model => model.Remark)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Url)
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Url)
                    @Html.ValidationMessageFor(model => model.Url)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HttpMethd, "Http方法类型" )
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HttpMethd)
                    @Html.ValidationMessageFor(model => model.HttpMethd)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ActionName, "权限名" )
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ActionName)
                    @Html.ValidationMessageFor(model => model.ActionName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IsMenu, "是否是菜单" )
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsMenu)
                        @Html.ValidationMessageFor(model => model.IsMenu)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MenuIcon, "菜单图标的地址")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MenuIcon)
                    @Html.ValidationMessageFor(model => model.MenuIcon)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Sort, "排序")
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Sort)
                    @Html.ValidationMessageFor(model => model.Sort)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="保存" class="btn btn-default" />
                </div>
            </div>
        </div>
     }

</body>
</html>
